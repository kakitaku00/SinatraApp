<h1>BBS</h1>
<form action="creates" method="post">
  <label for="name">
    <span>ニックネーム：</span><input id="name" type="text" name="name" size="10">
  </label>
  <label for="text">
    <span>テキスト：</span><input id="text" type="text" name="text">
  </label>
  <input type="submit" value="つぶやく">
</form>
  <ul>
    <% @comments.each do |comment| %>
      <li data-id="<%= comment.id %>">
        <span><%= comment.id %></span> <span><%= comment.name %></span><span><%= comment.text %></span>
        <form action="destroy" method="post">
          <input class="delete" type="submit" value="削除">
          <input type="hidden" name="id" value="<%= comment.id %>">
          <input type="hidden" name="_method" value="delete">
        </form>
      </li>
    <% end %>
  </ul>

